<div class='col-3'>
  <div class="trip-card">
    <%#= image_tag trip.photo.url, class: "trip-photo" if trip.photo.present? %>
    <div class="card-body">
      <h3 class="card-title"><%#= trip.title %></h3>
      <i class="fa-solid fa-anchor"></i><p class="card-text"><strong>Capitaine :</strong> <%#= trip.user_id.first_name trip.user_id.last_name %></p>
      <p class="card-text"><strong>Itinéraire:</strong> <%#= trip.departure_address - trip.arrival_address %></p>
      <p class="card-text"><strong>Heure de départ:</strong> <%#= trip.departure_time.strftime("%H:%M") %></p>
      <p class="card-text"><strong>Heure d'arrivée:</strong> <%#= trip.arrival_time.strftime("%H:%M") %></p>
      <i class="fa-solid fa-person"></i> <p class="card-text"><strong>Capacité:</strong> <%#= trip.capacity %></p>
      <i class="fa-solid fa-bolt"></i><p class="card-text"><strong>Places disponibles:</strong> <%#= trip.available_seats %></p>
      <%#= link_to "Réserver", trip_reservation_path(trip), class: "btn btn-primary" %>
    </div>
  </div>
</div>
