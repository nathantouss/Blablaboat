<div class="trip-card-index">
    <%= cl_image_tag trip.photo.key, class: "trip-photo-index" if trip.photo.present? %>
    <div class="card-body col">
      <div class="d-flex my-2 align-items-center"><h4 class="card-title mb-1"><strong><%= trip.origin %> </h4><i class="fa-solid fa-arrow-right mx-2"></i><h4 class="card-title mb-1"> <%= trip.destination %></strong></h4></div>
      <div class="d-flex my-2 align-items-center"><i class="fa-solid fa-user-tie me-1"></i><p class="card-text m-0"><strong>Capt'n :</strong> <%= trip.user.first_name %> <%= trip.user.last_name %></p></div>
      <div class="d-flex my-2 align-items-center"><i class="fa-solid fa-sailboat me-1"></i><p class="card-text m-0"><strong>Departure date:</strong> <%= trip.time_of_departure %></p></div>
      <div class="d-flex my-2 align-items-center"><i class="fa-solid fa-anchor me-1"></i><p class="card-text m-0"><strong>Arrival date:</strong> <%= trip.time_of_arrival %></p></div>
      <div class="d-flex my-2 align-items-center"><i class="fa-solid fa-person me-1"></i> <p class="card-text m-0"><strong>Capacity:</strong> <%= trip.number_of_people %></p></div>
      <div class="d-flex my-2 align-items-center"><i class="fa-solid fa-bolt me-1"></i><p class="card-text m-0"><strong>Available seats:</strong> <%= trip.seat_available %></p></div>
      <div class="d-flex my-2 align-items-center"><i class="fa-solid fa-euro-sign me-1"></i><p class="card-text"><strong>Price per seat:</strong> <%= trip.price %></p></div>
      <%= link_to name,path,data: data, class: "btn btn-primary next-step"%>
    </div>
  </div>
